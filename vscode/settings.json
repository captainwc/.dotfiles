{
    // 外观
    "window.commandCenter": false,
    "workbench.activityBar.location": "top",
    "workbench.colorTheme": "Default Light+",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.startupEditor": "none",
    "workbench.editor.wrapTabs": true,
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook",
        "*.pdf": "cweijan.officeViewer",
        "*.pptx": "cweijan.officeViewer",
        "*.md": "cweijan.officeViewer",
        "*.png": "cweijan.officeViewer",
        "{git,gitlens}:/**/*.{md,csv}": "default",
        "{git,gitlens,git-graph}:/**/*.{md,csv,svg}": "default"
    },
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 300,
    "explorer.confirmPasteNative": false,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "editor.fontSize": 20,
    "editor.fontWeight": "normal",
    "editor.fontFamily": "'Maple Mono NF CN', Consolas, 'Courier New', monospace",
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.tabCompletion": "on",
    "editor.wordWrap": "on",
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.accessibilitySupport": "off",
    "editor.acceptSuggestionOnEnter": "off",
    "editor.detectIndentation": false,
    "editor.minimap.renderCharacters": false,
    "editor.inlineSuggest.enabled": true,
    "editor.minimap.showSlider": "always",
    "editor.inlayHints.enabled": "offUnlessPressed",
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit"
    },
    "editor.unicodeHighlight.allowedLocales": {
        "ja": true,
        "zh-hans": true,
        "zh-hant": true
    },
    "diffEditor.codeLens": true,
    "diffEditor.hideUnchangedRegions.enabled": true,
    // git
    "git.path": "git",
    "git.openRepositoryInParentFolders": "never",
    "git.confirmSync": false,
    "git.enableSmartCommit": true,
    "remote.SSH.configFile": "~/.ssh/config",
    "remote.SSH.remotePlatform": {
        "vm-debian": "linux"
    },
    // terminal
    "terminal.integrated.enableImages": true,
    "terminal.integrated.enableMultiLinePasteWarning": "never",
    "terminal.integrated.fontSize": 17,
    "terminal.integrated.fontWeight": "normal",
    "terminal.integrated.fontFamily": "'Maple Mono NF CN','DroidSansM Nerd Font Mono'",
    "terminal.integrated.defaultProfile.linux": "zsh",
    "terminal.integrated.env.windows": {
        "LANG": "en_US.UTF-8"
    },
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "terminal.integrated.automationProfile.windows": {
        "path": "powershell",
    },
    "terminal.integrated.profiles.windows": {
        "Ubuntu (WSL)": {
            "path": "C:\\WINDOWS\\System32\\wsl.exe",
            "icon": "terminal-ubuntu",
            "args": [
                "-d",
                "Ubuntu",
                "-u",
                "shuaikai"
            ]
        },
        "PowerShell": {
            "path": "pwsh.exe",
            "icon": "terminal-powershell",
            "args": [
                "-NoExit",
                "-nologo"
                // "chcp 65001" // 设置utf-8编码，似乎没必要了
            ],
        },
        "Command Prompt": {
            "path": [
                "${env:windir}\\Sysnative\\cmd.exe",
                "${env:windir}\\System32\\cmd.exe"
            ],
            "args": [],
            "icon": "terminal-cmd"
        },
        "Git Bash": {
            "source": "Git Bash",
            "Path": "bash",
            "icon": "terminal-bash",
            "args": [],
        }
    },
    // debug
    "debug.onTaskErrors": "abort",
    "debug.allowBreakpointsEverywhere": true,
    "debug.autoExpandLazyVariables": "on",
    // cpp
    "C_Cpp.intelliSenseEngine": "disabled",
    "C_Cpp.errorSquiggles": "enabled",
    "C_Cpp.default.cppStandard": "c++20",
    "C_Cpp.autocomplete": "default",
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
    "C_Cpp.enhancedColorization": "enabled",
    "C_Cpp.clang_format_fallbackStyle": "Google",
    "C_Cpp.formatting": "clangFormat",
    // clang 系列
    "clangd.path": "clangd",
    "clangd.checkUpdates": false,
    "clangd.fallbackFlags": [
        "-std=c++20"
    ],
    "clang-format.executable": "clang-format",
    "clang-format.fallbackStyle": "Google",
    // cmake
    "cmake.showOptionsMovedNotification": false,
    "cmake.showNotAllDocumentsSavedQuestion": false,
    "cmake.languageSupport.enableFileAPI": true,
    "cmake.configureOnOpen": false,
    "cmake.useCMakePresets": "auto",
    "cmake.options.statusBarVisibility": "compact",
    "cmake.pinnedCommands": [
        "workbench.action.tasks.configureTaskRunner",
        "workbench.action.tasks.runTask"
    ],
    "cmake.options.advanced": {
        "build": {
            "statusBarVisibility": "visible"
        },
        "launch": {
            "statusBarVisibility": "visible"
        },
        "debug": {
            "statusBarVisibility": "visible"
        }
    },
    // code runner
    "code-runner.defaultLanguage": "c++",
    "code-runner.clearPreviousOutput": true,
    "code-runner.saveFileBeforeRun": true,
    "code-runner.runInTerminal": true,
    "code-runner.executorMap": {
        "java": "javac $fileName && java $fileNameWithoutExt",
        "c": "cd $dirWithoutTrailingSlash && gcc $fileName -o $fileNameWithoutExt && ./$fileNameWithoutExt",
        "cpp": "cd $dirWithoutTrailingSlash && g++ $fileName -o $fileNameWithoutExt -std=c++20 && ./$fileNameWithoutExt",
        "cu": "cd $dirWithoutTrailingSlash && nvcc $fileName -o $fileNameWithoutExt && ./$fileNameWithoutExt",
        "go": "cd $dirWithoutTrailingSlash && go run $fileName",
        "shellscript": "bash",
        "python": "cd $dirWithoutTrailingSlash && set PYTHONIOENCODING=utf8 && python -u $fileName",
        "bat": "cmd /c",
        "lua": "lua",
        "csharp": "cd $dirWithoutTrailingSlash && dotnet run $filename",
        "javascript": "node",
        "rust": "cd $dirWithoutTrailingSlash && rustc $fileName && ./$fileNameWithoutExt",
        "powershell": "chcp 65001 & set NO_COLOR=1 & pwsh -ExecutionPolicy ByPass -File",
        "dart": "dart",
        "pascal": "cd $dirWithoutTrailingSlash && fpc $fileName && ./$fileNameWithoutExt",
        "perl": "perl",
        "perl6": "perl6",
        "php": "php",
        "r": "Rscript",
        "swift": "swift",
        "objective-c": "cd $dirWithoutTrailingSlash && gcc -framework Cocoa $fileName -o $fileNameWithoutExt && $dir$fileNameWithoutExt",
        "ruby": "ruby",
        "groovy": "groovy",
    },
    "code-runner.executorMapByFileExtension": {
        ".g4": "cd $dirWithoutTrailingSlash && antlr $fileName",
        ".smt": "cd $dirWithoutTrailingSlash && z3 $fileName",
        ".smt2": "cd $dirWithoutTrailingSlash && z3 $fileName",
        ".ahk": "autohotkey",
        ".lisp": "sbcl --script",
        ".vb": "cd $dirWithoutTrailingSlash && vbc /nologo $fileName && $dir$fileNameWithoutExt",
    },
    "code-runner.executorMapByGlob": {
        "pom.xml": "cd $dirWithoutTrailingSlash && mvn clean package"
    },
    // better comment
    "better-comments.tags": [
        {
            "tag": "!",
            "color": "#FF2D00",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "?",
            "color": "#3498DB",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "//",
            "color": "#474747",
            "strikethrough": true,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "todo",
            "color": "#FF8C00",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "*",
            "color": "#00CD66",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "~",
            "color": "#b146c2",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "^",
            "color": "#b146c2",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "&",
            "color": "#d29c27",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
    ],
